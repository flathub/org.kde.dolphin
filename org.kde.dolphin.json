{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "dolphin",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--talk-name=org.kde.kded5",
        "--talk-name=org.kde.kiod5",
        "--talk-name=org.kde.JobViewServer",
        "--talk-name=org.kde.kpasswdserver",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "rename-icon": "system-file-manager",
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.29/openldap-LMDB_0.9.29.tar.bz2",
                    "sha256": "182e69af99788b445585b8075bbca89ae8101069fbeee25b2756fb9590e833f8"
                }
            ],
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb"
        },
        {
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DLMDB_DIR=/app"
            ],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.97/baloo-5.97.0.tar.xz",
                    "sha256": "1f869c0eecca5b27bac4b51a29f5782725f2123430946e6a8f1fcc56beba5968",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/baloo-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DLMDB_DIR=/app"
            ],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.0/src/baloo-widgets-22.08.0.tar.xz",
                    "sha256": "38f799fde70b1d3fad21593caee97338d226c2ccfe0602ef7d96ea5a0c9689fa",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/baloo-widgets-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "icoutils",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://savannah.nongnu.org/download/icoutils/icoutils-0.32.3.tar.bz2",
                    "sha256": "17abe02d043a253b68b47e3af69c9fc755b895db68fdc8811786125df564c6e0"
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -Dm644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/system-file-manager.png; done",
                "mv /app/bin/{dolphin,dolphin-bin}",
                "install run_dolphin.sh /app/bin/dolphin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.1/src/dolphin-22.08.1.tar.xz",
                    "sha256": "067bef1d24c411ba2bad2aee62ed10dd584c4c43184cbddfbefa775c9a1c9be9",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/dolphin-$version.tar.xz"
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -e 's/org.kde.dolphin.FileManager1/org.freedesktop.FileManager1/g' -i CMakeLists.txt"
                    ]
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.1/src/dolphin-plugins-22.08.1.tar.xz",
                    "sha256": "a378343fcba0cf87a51f54829c726e00ebbcdef4c1a3e98245888980b2f7bc75",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/dolphin-plugins-$version.tar.xz"
                    }
                }
            ]
        },
        "shared-modules/libusb/libusb.json",
        {
            "name": "libmtp",
            "config-opts": [
                "--with-udev=/app/lib/udev"
            ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/libmtp/files/libmtp/1.1.19/libmtp-1.1.19.tar.gz",
                    "sha256": "deb4af6f63f5e71215cfa7fb961795262920b4ec6cb4b627f55b30b18aa33228"
                }
            ]
        },
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.9/libssh-0.9.6.tar.xz",
                    "sha256": "86bcf885bd9b80466fe0e05453c58b877df61afa8ba947a58c356d7f0fab829b"
                }
            ]
        },
        {
            "name": "perl-modules",
            "buildsystem": "simple",
            "build-commands": [
                "echo 'this is a workaround for a flatpak+perl limitation'",
                "tar xhf Parse-Yapp-1.21.tar.gz",
                "cd Parse-Yapp-1.21 && perl Makefile.PL PREFIX=/app && make && make install",
                "ln -s /app/lib/perl5/site_perl/5.34.1/$(basename `ls -d /usr/lib/perl5/5.34.1/*-linux`) /app/lib/perl5/site_perl/5.34.1/arch"
            ],
            "post-install": [
                "chmod -R u+w /app/lib/perl5/site_perl"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://cpan.metacpan.org/authors/id/W/WB/WBRASWELL/Parse-Yapp-1.21.tar.gz",
                    "sha256": "3810e998308fba2e0f4f26043035032b027ce51ce5c8a52a8b8e340ca65f13e5"
                }
            ]
        },
        {
            "name": "rpcgen",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/thkukuk/rpcsvc-proto/releases/download/v1.4.2/rpcsvc-proto-1.4.2.tar.xz",
                    "sha256": "678851b9f7ddf4410d2859c12016b65a6dd1a0728d478f18aeb54d165352f17c"
                }
            ]
        },
        {
            "name": "samba",
            "buildsystem": "autotools",
            "config-opts": [
                "--without-json",
                "--without-ad-dc",
                "--without-ldap",
                "--without-ads",
                "--without-pam"
            ],
            "build-options": {
                "env": {
                    "PERLLIB": "/app/lib/perl5/site_perl/5.34.1:/app/lib/perl5/site_perl/5.34.1/arch"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://samba.org/samba/ftp/stable/samba-4.15.3.tar.gz",
                    "sha256": "519399404391550345846768ea4dd0fe7fcb04e20c2b891b5eeb02e5554137db"
                }
            ]
        },
        {
            "name": "kdsoap",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/KDAB/KDSoap/releases/download/kdsoap-2.0.0/kdsoap-2.0.0.tar.gz",
                    "sha256": "d18963104fa6f7d02b044631cddbe78f18f70e06c607af680c7ace04d6cf04ee"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.1/src/kio-extras-22.08.1.tar.xz",
                    "sha256": "89e140e1e6668754b8cb688b5375108d1dfafe0fad65600dd13694fe6ca53038",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kio-extras-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [
                "/share/icons",
                "/share/doc",
                "/share/man",
                "/share/config.kcfg",
                "/share/kxmlgui5"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.0/src/ark-22.08.0.tar.xz",
                    "sha256": "d9dd766b7c3243edbed29df105b3e198da16e76063576f4eeed9867f0e17e847",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/ark-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
