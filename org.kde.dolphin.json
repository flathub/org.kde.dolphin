{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "dolphin",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.kde.kded5",
        "--talk-name=org.kde.kiod5",
        "--talk-name=org.kde.JobViewServer",
        "--talk-name=org.kde.kpasswdserver",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "lmdb",
            "sources": [
                {
