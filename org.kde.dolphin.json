{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.14",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "run_dolphin.sh",
    "finish-args": [ "--device=dri",
                     "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=home",
                     "--filesystem=/run/media",
                     "--talk-name=org.kde.kiod5",
                     "--talk-name=org.kde.JobViewServer",
                     "--talk-name=org.kde.kpasswdserver",
                     "--system-talk-name=org.freedesktop.UDisks2" ],
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "config-opts": [ "-DENABLE_TESTING=OFF" ],
            "name": "kfilemetadata",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.66/kfilemetadata-5.66.0.tar.xz",
                    "sha256": "d78c2128887591229e6c61c60e77af8647e407d570b07892f5f06ab682f807b9"
                }
            ]
        },
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LMDB/lmdb/archive/LMDB_0.9.24.tar.gz",
                    "sha256": "44602436c52c29d4f301f55f6fd8115f945469b868348e3cddaf91ab2473ea26"
                }
            ],
            "no-autogen": true,
            "make-install-args": ["prefix=/app"],
            "subdir" : "libraries/liblmdb"
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.66/baloo-5.66.0.tar.xz",
                    "sha256": "9495869eee72f587efadc8a848c3f76b93a1dcb1914c8e818d7084451107a1f8"
                }
            ]
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/19.12.2/src/baloo-widgets-19.12.2.tar.xz",
                    "sha256": "ccc2df948f1d6245593ab1c6082b347e8da45bc502df0557caf0e17040c0bbc8"
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -d /app/share/icons/hicolor/${icon_size}x${icon_size}/apps && install -m644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/org.kde.dolphin.png; done",
                "install run_dolphin.sh /app/bin/run_dolphin.sh"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/19.12.2/src/dolphin-19.12.2.tar.xz",
                    "sha256": "d4ef94be73b6da0d8031cd50cae07e242efed873212a99e1cf5111330fff3f7d"
                },
                {
                    "type": "patch",
                    "path": "dolphinpatch.patch"
                },
                {
                    "type": "patch",
                    "path": "dolphin-icon.patch"
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/19.12.2/src/dolphin-plugins-19.12.2.tar.xz",
                    "sha256": "a8ae0114554f906daad4da76d11da24706faa534894194087b085eb30ffbe480"
                }
            ]
        },
        {
            "name": "libusb1",
            "config-opts": [ "--enable-udev=no" ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/libusb/libusb/releases/download/v1.0.23/libusb-1.0.23.tar.bz2",
                    "sha256": "db11c06e958a82dac52cf3c65cb4dd2c3f339c8a988665110e0d24d19312ad8d"
                }
            ]
        },
        {
            "name": "libmtp",
            "config-opts": [ "--with-udev=/app/lib/udev" ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/libmtp/files/libmtp/1.1.16/libmtp-1.1.16.tar.gz",
                    "sha256": "5b68f9dd1ed38de558de687f40e255a39e4d5e32ef3de601f0ac19dd5682bba0"
                }
            ]
        },
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.9/libssh-0.9.3.tar.xz",
                    "sha256": "2c8b5f894dced58b3d629f16f3afa6562c20b4bdc894639163cf657833688f0c"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/19.12.2/src/kio-extras-19.12.2.tar.xz",
                    "sha256": "de6532d1298b1b5c32295292b5b7bf418bf937887d174b80cef3f3aadde15882"
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [ "/share/icons", "/share/doc", "/share/man", "/share/config.kcfg", "/share/kxmlgui5" ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/19.12.2/src/ark-19.12.2.tar.xz",
                    "sha256": "fc70fa952b872330acd510c84ab2651258a74f370efd1f0bda6df8c4b9e6aaf1"
                }
            ]
        }
    ]
}
