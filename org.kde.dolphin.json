{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15-21.08",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "dolphin",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=home",
        "--filesystem=/run/media",
        "--filesystem=/media",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.kde.kded5",
        "--talk-name=org.kde.kiod5",
        "--talk-name=org.kde.JobViewServer",
        "--talk-name=org.kde.kpasswdserver",
        "--system-talk-name=org.freedesktop.UDisks2"
    ],
    "rename-icon": "system-file-manager",
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.29/openldap-LMDB_0.9.29.tar.bz2",
                    "sha256": "182e69af99788b445585b8075bbca89ae8101069fbeee25b2756fb9590e833f8",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 6974,
                        "stable-only": true,
                        "url-template": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_$version/openldap-LMDB_$version.tar.bz2"
                    }
                }
            ],
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "subdir": "libraries/liblmdb"
        },
        {
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DLMDB_DIR=/app"
            ],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.99/baloo-5.99.0.tar.xz",
                    "sha256": "00fb769b32eec159368b1eed31a7bfdd2bae3ce37a81d044a8ab2d2a9406ff6a",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8762,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/frameworks/$major.$minor/baloo-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "config-opts": [
                "-DENABLE_TESTING=OFF",
                "-DLMDB_DIR=/app"
            ],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.2/src/baloo-widgets-22.08.2.tar.xz",
                    "sha256": "2d660f328b8070a74124205e7c64776b9010ef04cc71774c2d8b851ff8279a26",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/baloo-widgets-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "icoutils",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://savannah.nongnu.org/download/icoutils/icoutils-0.32.3.tar.bz2",
                    "sha256": "17abe02d043a253b68b47e3af69c9fc755b895db68fdc8811786125df564c6e0",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1360,
                        "stable-only": true,
                        "url-template": "http://savannah.nongnu.org/download/icoutils/icoutils-$version.tar.bz2"
                    }
                }
            ]
        },
        {
            "name": "konsole",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.2/src/konsole-22.08.2.tar.xz",
                    "sha256": "9e3574e23232a6aa38441d043ba3c624f0b4d275111a0c6eb1b7840caabde96c",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/konsole-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -Dm644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/system-file-manager.png; done",
                "mv /app/bin/{dolphin,dolphin-bin}",
                "install run_dolphin.sh /app/bin/dolphin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.2/src/dolphin-22.08.2.tar.xz",
                    "sha256": "39f2ee237ee5e62baf05e3798d8512e01a7d40276fca03488e256c6e30543b56",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/dolphin-$version.tar.xz"
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -e 's/org.kde.dolphin.FileManager1/org.freedesktop.FileManager1/g' -i CMakeLists.txt"
                    ]
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.2/src/dolphin-plugins-22.08.2.tar.xz",
                    "sha256": "036f2acd9240342dbcea73c3cac7a01977e74626490303fa8bddaacd34213925",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/dolphin-plugins-$version.tar.xz"
                    }
                }
            ]
        },
        "shared-modules/libusb/libusb.json",
        {
            "name": "libmtp",
            "config-opts": [
                "--with-udev=/app/lib/udev"
            ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/libmtp/files/libmtp/1.1.20/libmtp-1.1.20.tar.gz",
                    "sha256": "c9191dac2f5744cf402e08641610b271f73ac21a3c802734ec2cedb2c6bc56d0",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 10017,
                        "stable-only": true,
                        "url-template": "https://sourceforge.net/projects/libmtp/files/libmtp/$version/libmtp-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.10/libssh-0.10.4.tar.xz",
                    "sha256": "07392c54ab61476288d1c1f0a7c557b50211797ad00c34c3af2bbc4dbc4bd97d",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1729,
                        "stable-only": true,
                        "url-template": "https://www.libssh.org/files/$major.$minor/libssh-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "perl-modules",
            "buildsystem": "simple",
            "build-commands": [
                "echo 'this is a workaround for a flatpak+perl limitation'",
                "tar xhf Parse-Yapp-1.21.tar.gz",
                "cd Parse-Yapp-1.21 && perl Makefile.PL PREFIX=/app && make && make install",
                "ln -s /app/lib/perl5/site_perl/5.34.1/$(basename `ls -d /usr/lib/perl5/5.34.1/*-linux`) /app/lib/perl5/site_perl/5.34.1/arch"
            ],
            "post-install": [
                "chmod -R u+w /app/lib/perl5/site_perl"
            ],
            "sources": [
                {
                    "type": "file",
                    "url": "https://cpan.metacpan.org/authors/id/W/WB/WBRASWELL/Parse-Yapp-1.21.tar.gz",
                    "sha256": "3810e998308fba2e0f4f26043035032b027ce51ce5c8a52a8b8e340ca65f13e5"
                }
            ]
        },
        {
            "name": "rpcgen",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/thkukuk/rpcsvc-proto/releases/download/v1.4.2/rpcsvc-proto-1.4.2.tar.xz",
                    "sha256": "678851b9f7ddf4410d2859c12016b65a6dd1a0728d478f18aeb54d165352f17c"
                }
            ]
        },
        {
            "name": "samba",
            "buildsystem": "autotools",
            "config-opts": [
                "--without-json",
                "--without-ad-dc",
                "--without-ldap",
                "--without-ads",
                "--without-pam"
            ],
            "build-options": {
                "env": {
                    "PERLLIB": "/app/lib/perl5/site_perl/5.34.1:/app/lib/perl5/site_perl/5.34.1/arch"
                }
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://samba.org/samba/ftp/stable/samba-4.15.3.tar.gz",
                    "sha256": "519399404391550345846768ea4dd0fe7fcb04e20c2b891b5eeb02e5554137db"
                }
            ]
        },
        {
            "name": "kdsoap",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/KDAB/KDSoap/releases/download/kdsoap-2.0.0/kdsoap-2.0.0.tar.gz",
                    "sha256": "d18963104fa6f7d02b044631cddbe78f18f70e06c607af680c7ace04d6cf04ee"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.2/src/kio-extras-22.08.2.tar.xz",
                    "sha256": "5dd665138834b1401ddee84432107bb9bc9fbe16b599840cf841aebebfd7a466",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/kio-extras-$version.tar.xz"
                    }
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [
                "/share/icons",
                "/share/doc",
                "/share/man",
                "/share/config.kcfg",
                "/share/kxmlgui5"
            ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/22.08.2/src/ark-22.08.2.tar.xz",
                    "sha256": "7946fc925ad1f8b2743fac4f96ff117abbedb4f2a692ed4e5612fe224968626f",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/ark-$version.tar.xz"
                    }
                }
            ]
        }
    ]
}
