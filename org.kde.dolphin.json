        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DFLATPAK=ON"
            ],
            "post-install": [
                "mv /app/bin/{dolphin,dolphin-bin}",
                "install run_dolphin.sh /app/bin/dolphin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/24.02.1/src/dolphin-24.02.1.tar.xz",
                    "sha256": "597bb12c53984bae7310cda5e06dbed831fdae1a6e731f55bbc660b4a583da0e",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 8763,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/dolphin-$version.tar.xz"
                    }
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -e 's/org.kde.dolphin.FileManager1/org.freedesktop.FileManager1/g' -i CMakeLists.txt"
                    ]
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                },
                {
                    "type": "patch",
                    "path": "0001-org.kde.dolphin.appdata-Add-developer_name.patch"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
