{
    "id": "org.kde.dolphin",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "default-branch": "stable",
    "command": "dolphin",
    "finish-args": [ "--device=dri",
                     "--share=ipc",
                     "--share=network",
                     "--socket=x11",
                     "--socket=wayland",
                     "--filesystem=home",
                     "--filesystem=/run/media",
                     "--talk-name=org.kde.kiod5",
                     "--talk-name=org.kde.JobViewServer",
                     "--talk-name=org.kde.kpasswdserver",
                     "--system-talk-name=org.freedesktop.UDisks2" ],
    "rename-icon": "system-file-manager",
    "cleanup": [
        "/lib/cmake",
        "/lib/pkgconfig",
        "/include",
        "/docs",
        "/mkspecs",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "lmdb",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://git.openldap.org/openldap/openldap/-/archive/LMDB_0.9.26/openldap-LMDB_0.9.26.tar.bz2",
                    "sha256": "cda7a06f615dbd7d35987e83df689190d3e9f263190f2f1e36b70357786351f7"
                }
            ],
            "no-autogen": true,
            "make-install-args": ["prefix=/app"],
            "subdir" : "libraries/liblmdb"
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/frameworks/5.73/baloo-5.73.0.tar.xz",
                    "sha256": "887077ae3e090d673d2ffe7eb869a0ab6f5d14e9dae2dccd619e4689699a2dfe"
                }
            ]
        },
        {
            "config-opts": ["-DENABLE_TESTING=OFF" , "-DLMDB_DIR=/app"],
            "name": "baloo-widgets",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.08.2/src/baloo-widgets-20.08.2.tar.xz",
                    "sha256": "e1d14b8dba911ebc1cee76dbcd44fa200418ba959d86ce567093b5fc3b700a07"
                }
            ]
        },
        {
            "name": "dolphin",
            "buildsystem": "cmake-ninja",
            "post-install": [
                "for icon_size in 16 22 32 48 64 128; do install -Dm644 src/icons/${icon_size}-system-file-manager.png /app/share/icons/hicolor/${icon_size}x${icon_size}/apps/system-file-manager.png; done",
                "mv /app/bin/{dolphin,dolphin-bin}",
                "install run_dolphin.sh /app/bin/dolphin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.08.2/src/dolphin-20.08.2.tar.xz",
                    "sha256": "bd13574610fc2108b9b04249cff70ca99958fe57a42fbf260ed16e5e377071bc"
                },
                {
                    "type": "shell",
                    "commands": [
                        "mv org.kde.{dolphin,freedesktop}.FileManager1.service.in",
                        "sed -e 's/dolphin.FileManager1/freedesktop.FileManager1/g' -i CMakeLists.txt",
                        "sed -e 's/dolphinDBusService/dolphinDBusService(KDBusService::NoExitOnFailure)/' -i src/main.cpp"
                    ]
                },
                {
                    "type": "file",
                    "path": "run_dolphin.sh"
                }
            ]
        },
        {
            "name": "dolphin-plugins",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.08.2/src/dolphin-plugins-20.08.2.tar.xz",
                    "sha256": "7eabeb295ae2932958992bf7273afcb8164fbe90a2574064983fb2ecbc57eeaf"
                }
            ]
        },
        "shared-modules/libusb/libusb.json",
        {
            "name": "libmtp",
            "config-opts": [ "--with-udev=/app/lib/udev" ],
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://sourceforge.net/projects/libmtp/files/libmtp/1.1.17/libmtp-1.1.17.tar.gz",
                    "sha256": "f8a34cf52d9f9b9cb8c7f26b12da347d4af7eb904c13189602e4c6b62d1a79dc"
                }
            ]
        },
        {
            "name": "libssh",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.libssh.org/files/0.9/libssh-0.9.5.tar.xz",
                    "sha256": "acffef2da98e761fc1fd9c4fddde0f3af60ab44c4f5af05cd1b2d60a3fa08718"
                }
            ]
        },
        {
            "name": "kio-extras",
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.08.2/src/kio-extras-20.08.2.tar.xz",
                    "sha256": "9d4b9cb5a4002ad2127c5c5c4d25ff95d53de32ea08348e8dc40fe83d950076e"
                }
            ]
        },
        {
            "name": "ark",
            "cleanup": [ "/share/icons", "/share/doc", "/share/man", "/share/config.kcfg", "/share/kxmlgui5" ],
            "buildsystem": "cmake-ninja",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/20.08.2/src/ark-20.08.2.tar.xz",
                    "sha256": "ec061ac07687b5a3541af293e3bc2aa7bedcfe0ef38ba6e57e2704068a726ffc"
                }
            ]
        }
    ]
}
